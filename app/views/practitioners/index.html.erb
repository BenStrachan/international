<div class="row">
  <div class="col-md-6 col-sm-6 col-6">
    <h1>Handovers</h1>
  </div>
  <div class="col-md-6 col-sm-6 col-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_practitioner_path %>">New practitioner</a>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Active</th>
      <th>Profession</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @practitioners.each do |practitioner| %>
      <tr>
        <td><%= practitioner.first_name %></td>
        <td><%= practitioner.last_name %></td>
        <td><%= practitioner.active %></td>
        <td><%= practitioner.profession %></td>
        <td><%= practitioner.email %></td>
        <td><%= link_to 'Show', practitioner %></td>
        <td><%= link_to 'Edit', edit_practitioner_path(practitioner) %></td>
        <td><%= link_to 'Destroy', practitioner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
